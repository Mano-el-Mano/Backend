{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
      ],
      "rules": {
        "prettier/prettier": [
          "error",
          {
            "parser": "babel",
            "printWidth": 80,
            "tabWidth": 4,
            "useTabs": false,
            "semi": false,
            "singleQuote": true,
            "trailingComma": "none",
            "bracketSpacing": true,
            "jsxBracketSameLine": false,
            "arrowParens": "avoid",
            "rangeStart": 0,
            "rangeEnd": null
          }
        ]
    }
}
